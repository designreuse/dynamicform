<?xml version="1.0" encoding="utf-8"?>
<decorators defaultdir="/">
	<!-- 此处用来定义不需要过滤的页面 -->
	<excludes>
		<pattern>/login/*</pattern>
		<pattern>/pages/generalError.jsp</pattern>
		<pattern>/pages/menu_loginout/*</pattern>
		<pattern>/panel/*.html</pattern>
	</excludes>

	<!-- 用来定义装饰器要过滤的页面 -->
	<decorator name="main" page="/pages/decorators/main_2.jsp">
		<pattern>/welcome.jsp</pattern>
		<pattern>/template/dynamicform.action</pattern>
		<pattern>/page/*.action</pattern>
        <pattern>/user/*.action</pattern>
        <pattern>/document/*.action</pattern>
        <pattern>/entry/*.action</pattern>
        <pattern>/entryCode/*.action</pattern>
        <pattern>/patient/*.action</pattern>
        <pattern>/participant/*.action</pattern>
        <pattern>/study/*.action</pattern>
        <pattern>/department/*.action</pattern>
        <pattern>/disease/*.action</pattern>
        <pattern>/dataInput/inputViewSelectSubmit.action</pattern>
	</decorator>
    <decorator name="maingrid" page="/pages/decorators/main_view_grid.jsp">
        <pattern>/view/*.action</pattern>
    </decorator>
</decorators>
